<div class="blogpost-container">
  <section class="blogpost" blogpost-id="{{id}}">
    <div class="blogpost-header">
      <h2>
        <p>{{title}}</p>
      </h2>
      <p>Created by {{user.name}} on {{format_date date_created}}</p>
    </div>
    <div class="blogpost-content">
      <p>{{content}}</p>
    </div>
  </section>
  
  <section class="create-form">
    <h2>Leave a Comment</h2>
    <div class="create-body" logged_in_user="{{logged_in_user}}">
      <div class="form-group">
        <label for="comment-content"></label>
        <input class="form-input" type="text" id="comment-content" placeholder="Let {{user.name}} know what you think"/>
      </div>
      <div class="form-group">
          <button class="btn btn-primary" type="submit" id="create-btn">Comment</button>
      </div>
    </div>
  </section>
</div>

<script src="/js/comment.js"></script>