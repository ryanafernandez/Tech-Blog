<div class="blogpost-container">
  <div class="blogPost">
    <div class="blogPost-header">
      <h2>
        <p>{{title}}</p>
      </h2>
      <p>Created by {{user.name}} on {{format_date date_created}}</p>
    </div>
    <div class="blogPost-content">
      <p>{{content}}</p>
    </div>
  </div>
  

  <p>
    <button class="btn btn-primary">Leave a comment</button>
  </p>
</div>
